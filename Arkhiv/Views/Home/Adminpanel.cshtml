@{
    ViewData["Title"] = "Страница входа";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Страница входа</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <div class="container" style="box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5); word-break: break-all;">
        <h1>Вход</h1>
        <div class="d-flex flex-column align-items-center justify-content-center">
            <form id="loginForm" asp-controller="Home" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="username">Имя пользователя</label>
                    <input type="text" class="form-control" id="username" name="Username" required>
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" id="password" name="Password" required>
                </div>
            </form>
            <a class="btn btn-primary mt-2 flash-button" style="font-family: Helvetica; width: 95%;" href="#" onclick="document.getElementById('loginForm').submit();">
                Войти
            </a>
        </div>
    </div>
</body>
</html>
